<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- عنوان الصفحة -->
        <TextView
            android:id="@+id/tvCraftTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Craft Collection"
            android:textSize="24sp"
            android:textColor="#1C2660"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <!-- منتج أول -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/table"
            android:contentDescription="Craft 1" />

        <!-- اسم المنتج + أيقونة العربة -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Handmade Basket"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#491C9A" />

            <ImageView
                android:id="@+id/cartIcon1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_cart"
                android:contentDescription="Add to Cart" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$29.99"
            android:textColor="#666666"
            android:paddingBottom="16dp" />

        <!-- منتج ثاني -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/chair"
            android:contentDescription="Craft 2" />

        <!-- اسم المنتج + أيقونة العربة -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Woven Wall Art"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#491C9A" />

            <ImageView
                android:id="@+id/cartIcon2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_cart"
                android:contentDescription="Add to Cart" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$45.00"
            android:textColor="#666666"
            android:paddingBottom="32dp" />
    </LinearLayout>
</ScrollView>
