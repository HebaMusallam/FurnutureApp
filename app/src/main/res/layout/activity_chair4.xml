<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <RelativeLayout
        android:id="@+id/constraintLayout6"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle">

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="28dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/sofa" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView16"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:text="Simple sofa"
            android:textColor="#491C9A" />

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:background="#491C9A">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="150$"
                android:textColor="#E4EC02" />
        </RelativeLayout>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="28dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/favorite" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/constraintLayout6"
        android:layout_marginStart="30dp"
        android:layout_marginTop="44dp"
        android:text="Product Description"
        android:textSize="17sp"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/constraintLayout6"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@id/textView21"
        android:src="@drawable/star" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_below="@id/constraintLayout6"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="28dp"
        android:text="(3.4)" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView20"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/six_prg"
        android:textColor="#77777575"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/constraintLayout7"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/textView22"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle_basket">

        <TextView
            android:id="@+id/priceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:text="199$"
            android:textColor="#DEE42A"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_add"

            />
        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/imageView18"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:text="01"
            android:textColor="#491C9A"
            android:textSize="18sp" />
    </RelativeLayout>

    <Button
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_below="@id/constraintLayout7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="add to basket" />

    <RelativeLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#77E6E1E1"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="44dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/home" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="36dp"
                android:layout_toEndOf="@id/imageView12"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_favorite_24" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="36dp"
                android:layout_toStartOf="@id/imageView15"
                android:layout_centerVertical="true"
                android:src="@drawable/cart" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="44dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/profile" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/cycle">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/basket" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
